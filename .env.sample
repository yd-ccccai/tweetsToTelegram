# Telegram机器人令牌（从 @BotFather 获取）
TELEGRAM_TOKEN=your_telegram_bot_token_here

# AI服务提供商配置
AI_PROVIDER=azure  # 可选：azure, openai, 或其他供应商
AI_BASE_URL=  # 可选：自定义API基础URL
AI_API_KEY=  # 当AI_PROVIDER不是azure时使用
AI_MODEL=  # 当AI_PROVIDER不是azure时使用

# Azure OpenAI配置（当AI_PROVIDER=azure时使用）
AZURE_OPENAI_KEY=your_azure_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_DEPLOYMENT=gpt-4o  # Azure部署名称

# 调试配置
DEBUG_CRAWLER=true  # 设置为true开启爬虫调试输出

# 可选：数据库配置（如果使用其他数据库）
# DATABASE_URL=postgresql://user:password@localhost/dbname